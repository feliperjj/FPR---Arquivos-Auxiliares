//Exemplos:
//n1 = 4258 n2 será igual a 8524
//n2 = 12625 n2 será igual a 52621

#include <stdio.h>

#include <stdio.h>

int inverterAlgarismos(int num, int *posicao) {
    int ultimoDigito,novoNum;
	
	if (num < 10) {
        *posicao *= 10;
        return num;
    }

     ultimoDigito = num % 10;
     novoNum = inverterAlgarismos(num / 10, posicao);

    *posicao *= 10;

    return (ultimoDigito * (*posicao)) + novoNum;
}

int inverterNumero(int num) {
    int posicao;
	
	posicao = 1;
    return inverterAlgarismos(num, &posicao);
}

int main() {
    int numero1,resultado;

    printf("Digite um número inteiro: ");
    scanf("%d", &numero1);

     resultado = inverterNumero(numero1);

    printf("O número com os algarismos invertidos é: %d\n", resultado);

    return 0;
}
